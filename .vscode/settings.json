{
    // Use the Microsoft IntelliSense engine
    "C_Cpp.intelliSenseEngine": "disabled",

    // Tell C/C++ extension to get settings from CMake Tools
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // Point to compile_commands.json generated by CMake
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

    // Explicitly set clang compiler path so IntelliSense can find system headers
    "C_Cpp.default.compilerPath": "C:/Program Files/LLVM/bin/clang++.exe",

    // Set IntelliSense mode matching clang x64
    "C_Cpp.default.intelliSenseMode": "windows-clang-x64",

    // Optional: treat the workspace as a C++ project
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c11",

    // Optional: ensure CMake Tools uses Ninja or Visual Studio generator
    "cmake.generator": "Ninja",
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/build",

    // Optional: show compile commands in CMake Tools output
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
    }
}